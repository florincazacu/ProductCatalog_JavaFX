<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0" fx:controller="sample.Controller">
    <center>
        <TableView fx:id="productsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn prefWidth="${productsTable.width}" text="Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="Color">
                    <cellValueFactory>
                        <PropertyValueFactory property="color"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="In stock">
                    <cellValueFactory>
                        <PropertyValueFactory property="inStock"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="Category">
                    <cellValueFactory>
                        <PropertyValueFactory property="categoryName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="${productsTable.width}" text="Brand">
                    <cellValueFactory>
                        <PropertyValueFactory property="brandName"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <BorderPane.margin>
                <Insets right="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox>
        <HBox fx:id="buttonsLayout" alignment="CENTER" prefHeight="100.0" prefWidth="20.0" maxWidth="500" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Button prefWidth="${buttonsLayout.width}" maxWidth="${buttonsLayout.width}" mnemonicParsing="false" text="Add Product"/>
                <Button prefWidth="${buttonsLayout.width}" maxWidth="${buttonsLayout.width}" mnemonicParsing="false" text="Modify Product"/>
                <Button prefWidth="${buttonsLayout.width}" maxWidth="${buttonsLayout.width}" mnemonicParsing="false" text="Delete Product"/>
                <Button prefWidth="${buttonsLayout.width}" maxWidth="${buttonsLayout.width}" mnemonicParsing="false" text="Reset filters"/>
                <Button onAction="#exit" prefWidth="${buttonsLayout.width}" maxWidth="Infinity" mnemonicParsing="false" text="Exit"/>
            </children>
            <BorderPane.margin>
                <Insets right="10.0"/>
            </BorderPane.margin>
        </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
                <children>
                    <ProgressBar fx:id="progressBar" visible="false" prefWidth="200.0" progress="0.0">
                        <HBox.margin>
                            <Insets left="50.0"/>
                        </HBox.margin>
                    </ProgressBar>
                </children>
                <BorderPane.margin>
                    <Insets right="10.0"/>
                </BorderPane.margin>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>