<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="addProductGridPane" hgap="10" prefWidth="300.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DialogController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label text="Name" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
    <TextField fx:id="addProductNameTextField" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Brand" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="addProductBrandComboBox" editable="true" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Select"/>
    <Label text="Category" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="addProductCategoryComboBox" editable="true" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Color" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="addProductColorComboBox" editable="true" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <!--<Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="4" />-->
    <!--<DatePicker fx:id="addProductDatePicker" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="4" />-->
    <Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="addProductPriceTextField" prefWidth="${addProductGridPane.width}" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="In stock" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <CheckBox fx:id="addProductInStockCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Button fx:id="addProductOkButton" alignment="CENTER" prefWidth="100.0" text="OK" HBox.hgrow="NEVER" />
        <Button fx:id="addProductCancelButton" alignment="CENTER" prefWidth="100.0" text="Cancel" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints prefWidth="60.0" />
      <ColumnConstraints prefWidth="200.0" />
   </columnConstraints>
</GridPane>
